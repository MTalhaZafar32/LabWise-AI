# Application Settings
APP_NAME="LabWise AI"
APP_VERSION="1.0.0"
DEBUG=True

# API Settings
API_PREFIX="/api"
# ALLOWED_ORIGINS should be a JSON array if set in .env
# Example: ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]
# Leave commented to use defaults

# Database
DATABASE_URL="sqlite:///./data/labwise.db"
KB_DATA_PATH="Knowladge-base"

# OCR Settings
OCR_CONFIDENCE_THRESHOLD=0.7
USE_GPU=False

# LLM Settings (Ollama)
OLLAMA_BASE_URL="http://localhost:11434"
LLM_MODEL="phi3:mini"
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=500

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR="uploads"

# Medical Safety Thresholds
CONFIDENCE_LOW_THRESHOLD=0.6
CONFIDENCE_MEDIUM_THRESHOLD=0.8
